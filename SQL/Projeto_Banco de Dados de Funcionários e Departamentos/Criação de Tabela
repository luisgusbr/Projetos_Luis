-- Criar tabela de departamentos
CREATE TABLE departamentos (
    id INT PRIMARY KEY,
    nome VARCHAR(50)
);

-- Criar tabela de funcion√°rios
CREATE TABLE funcionarios (
    id INT PRIMARY KEY,
    nome VARCHAR(100),
    salario DECIMAL(10, 2),
    departamento_id INT,
    cidade VARCHAR(50),
    FOREIGN KEY (departamento_id) REFERENCES departamentos(id)
);
